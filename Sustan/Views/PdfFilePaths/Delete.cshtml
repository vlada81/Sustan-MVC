@model Sustan.Models.PdfFilePath

@{
    ViewBag.Title = "Brisanje";
}

@Html.Partial("_AdminPageTitle")

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Da li sigurno želite da obrišete datoteku?</h3>
                <div>
                    <hr />
                    <br />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.PdfFileName): 
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PdfFileName)
                        </dd>
                    </dl>
                    <br />
                    <br />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            @Html.ActionLink("Nazad", "Index", null, new { @class = "btn btn-default" })
                            <input type="submit" value="Obriši" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
