                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CostOfService)
                        </dt>

                        <dd id="cost-dd">
                            @Html.DisplayFor(model => model.CostOfService) RSD
                        </dd>
                    </dl>

